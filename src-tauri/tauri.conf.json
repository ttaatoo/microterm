{
  "productName": "µTerm",
  "version": "1.5.1",
  "identifier": "com.microterm",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "µTerm",
        "width": 800,
        "height": 650,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "minWidth": 250,
        "minHeight": 150
      }
    ],
    "security": {
      "csp": null,
      "devCsp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ],
    "resources": [],
    "copyright": "Copyright (c) 2025 µTerm Contributors",
    "category": "Utility",
    "shortDescription": "µTerm - A micro terminal in your menubar",
    "longDescription": "µTerm is a lightweight, fast terminal that lives in your macOS menubar for quick command execution",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": "-",
      "entitlements": null,
      "files": {
        "Info.plist": "./Info.plist"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
